        - const name = "jim"

        p= "Two to the power of ten is: " + 2**10

        p= '<script>alert("Hi")</script>'

        p Hi, #{name}

        //Upcase first letter

        p Hi, #{name.charAt(0).toUpperCase() + name.slice(1)}

        - const employees = ["Angela", "Jim", "Nilson", "Simone"]

        ul
            each employee in employees
                li= employee 


        -
            const employee = {
                "First Name" : "James",
                "Last Name" : "Hibbard"
            }
        ul
            each value, key in employee
                li= `${key}: ${value}`

        - const moreEmployees = []
        ul
            each employee in moreEmployees
                li= employee
            else 
                li The company doesn't have any employees. Maybe hire some?

        // you can use 'for' as an alias for 'each'

        -
            const anotherEmployee = {
                firstName: "James",
                lastName: "Hibbard",
                extn: "12345"
            }
        
        #anotherEmployee
            p= `${anotherEmployee.firstName} ${anotherEmployee.lastName}`
            p Extension: 
                if anotherEmployee.extn
                    =anotherEmployee.extn
                else
                    | n/a